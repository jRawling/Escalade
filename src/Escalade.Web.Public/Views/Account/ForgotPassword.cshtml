@using Escalade.Web.Public;
@model Escalade.Web.Public.Models.ForgotPasswordViewModel

@{
    Layout = Layouts.Minimalist;
}

@section title
{
    Forgot Password
}

@section Scripts {
    <script src="@Url.Content("~/lib/jquery-validation/jquery.validate.js")"></script>
    <script src="@Url.Content("~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js")"></script>
}

<div class="form-container">
    <div class="form-section">
        <div class="form-content">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            <h1>
                hastilude
            </h1>
            <div>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @placeholder = Html.DisplayNameFor(m => m.Email) })
            </div>
            @Html.ValidationSummary()
            <div>
                <a class="btn btn-lg pull-left btn-cancel" href="@Url.Action("Login")" role="button"><span class=" glyphicon glyphicon-chevron-left"></span></a>
                <input type="submit" formtarget="" class="btn btn-primary btn-lg pull-right" value="Reset password" />
            </div>
        }
            </div>
    </div>
</div>