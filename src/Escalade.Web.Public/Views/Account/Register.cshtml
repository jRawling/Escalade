@model Escalade.Web.Public.Models.RegisterViewModel

@section Scripts {
    <script src="@Url.Content("~/lib/jquery-validation/jquery.validate.js")"></script>
    <script src="@Url.Content("~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js")"></script>
}
<div id="create-account">
    <div class="box">
        <div class="content">
            <div class="logo text-center">
                <p class="text-primary">Hastilude</p>
            </div>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()

                <fieldset>
                    <div id="user">
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <span class=" glyphicon glyphicon-user"></span>
                                    </div>
                                    @Html.TextBoxFor(m => m.User.Username, new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.User.Username) })
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <span class=" glyphicon glyphicon-envelope"></span>
                                    </div>
                                    @Html.TextBoxFor(m => m.User.EmailAddress, new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.User.EmailAddress) })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <span class=" glyphicon glyphicon-lock"></span>
                                    </div>
                                    @Html.PasswordFor(m => m.User.Password, new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.User.Password) })
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <span class=" glyphicon glyphicon-lock"></span>
                                    </div>
                                    @Html.PasswordFor(m => m.User.ConfirmPassword, new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.User.ConfirmPassword) })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="profile">
                        <div class="row">
                            <div class="form-group col-sm-6">
                                @Html.TextBoxFor(m => m.User.FirstName, new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.User.FirstName) })
                            </div>
                            <div class="form-group col-sm-6">
                                @Html.TextBoxFor(m => m.User.LastName, new { @class = "form-control", @placeholder = Html.DisplayNameFor(m => m.User.LastName) })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                @Html.DropDownListFor(m => m.User.SelectedCountry, Model.Countries, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-sm-6">
                                @Html.DropDownListFor(m => m.User.SelectedGender, Model.Genders, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </fieldset>
                <input type="submit" formtarget="" class="btn btn-primary btn-lg center-block" value="Create Account" />
            }
        </div>
    </div>
</div>